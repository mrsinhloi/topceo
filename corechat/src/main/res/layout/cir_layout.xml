<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/cir_layout_size"
    android:layout_height="@dimen/cir_layout_size"
    android:layout_centerInParent="true"
    android:padding="15dp"
    android:background="@drawable/bg_round_rectangle_black_50_fill"
    android:id="@+id/relativeCir">

    <ProgressBar
        android:id="@+id/progressCir"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        tools:progress="25"
        android:layout_centerInParent="true"
        android:progressDrawable="@drawable/cir_drawable"
        android:secondaryProgress="100" />


    <TextView
        android:id="@+id/txtCir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="9sp" />

    <ImageView
        android:id="@+id/imgCir"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="@dimen/ic_size_18dp"
        android:layout_height="@dimen/ic_size_18dp"
        android:src="@drawable/ic_check_white_24dp"
        app:tint="@color/cir_foreground"
        android:layout_centerInParent="true" />

</RelativeLayout>