<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutPreviewLink"
    android:visibility="gone"
    tools:visibility="visible">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLinkPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgPreview"
                    android:layout_width="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_height="@dimen/imgPreviewHeight"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/txt1Preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textColor="@color/md_grey_700"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        tools:text="tinhte.vn" />

                    <TextView
                        android:id="@+id/txt2Preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textColor="@color/md_black_1000"
                        android:textSize="13sp"
                        tools:text="Xiaomi Haylou T16: Chiếc tai nghe True-Wireless có chống ồn chủ động với giá chưa tới 1tr đồng nhập khẩu chính hãng" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <ImageView
        android:id="@+id/imgClosePreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle_black_alpha_border"
        android:padding="3dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_round_close_24" />

</RelativeLayout>