<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/fiveh_image1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="@dimen/item_margin"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/fiveh_image2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="0dp"
        tools:layout_width="0dp"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/fiveh_image2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/item_margin"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/fiveh_image1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fiveh_image1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="0dp"
        tools:layout_width="0dp"
        tools:src="@tools:sample/avatars" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/item_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fiveh_image1"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/fiveh_image3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/item_margin"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toStartOf="@+id/fiveh_image4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/fiveh_image4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_marginRight="@dimen/item_margin"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toStartOf="@+id/fiveh_image5"
            app:layout_constraintStart_toEndOf="@+id/fiveh_image3"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/fiveh_image5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/item_margin"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fiveh_image4"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/fiveh_load_more"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/blackTransparent"
            android:padding="32dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fb_number_text_size"
            android:visibility="gone"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/fiveh_image5"
            app:layout_constraintEnd_toEndOf="@+id/fiveh_image5"
            app:layout_constraintStart_toStartOf="@+id/fiveh_image5"
            app:layout_constraintTop_toTopOf="@+id/fiveh_image5"
            tools:text="3+"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

