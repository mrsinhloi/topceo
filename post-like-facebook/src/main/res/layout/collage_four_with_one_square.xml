<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/fwos_image1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/item_margin"
            android:layout_marginBottom="@dimen/item_margin"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/fwos_image2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_height="0dp"
            tools:layout_width="0dp"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/fwos_image2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_marginBottom="@dimen/item_margin"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/fwos_image1"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_height="0dp"
            tools:layout_width="0dp"
            tools:src="@tools:sample/avatars" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <ImageView
            android:id="@+id/fwos_image3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/item_margin"
            android:layout_marginRight="@dimen/item_margin"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/fwos_image4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_height="0dp"
            tools:layout_width="0dp"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/fwos_image4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/item_margin"
            android:layout_marginLeft="@dimen/item_margin"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/fwos_image3"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            tools:layout_height="0dp"
            tools:layout_width="0dp"
            tools:src="@tools:sample/avatars" />
        <TextView
            android:id="@+id/fwos_load_more"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/blackTransparent"
            android:padding="32dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fb_number_text_size"
            android:visibility="gone"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/fwos_image4"
            app:layout_constraintEnd_toEndOf="@+id/fwos_image4"
            app:layout_constraintStart_toStartOf="@+id/fwos_image4"
            app:layout_constraintTop_toTopOf="@+id/fwos_image4"
            tools:text="3+"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
