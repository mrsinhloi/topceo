<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    android:visibility="visible"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:entries="@array/arr_lang"
                    android:gravity="center_horizontal"
                    android:popupBackground="@color/colorPrimaryDarkChat"
                    android:spinnerMode="dropdown"
                    android:visibility="invisible" />


                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_72dp"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:layout_marginBottom="@dimen/margin_24dp"
                    android:gravity="center"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:src="@drawable/logo_sky_social_white" />
                </LinearLayout>

                <!--  Email Label -->
                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/username_or_phone"
                    android:inputType="text"
                    style="@style/editTextStyle1"
                    android:gravity="center"
                    />

                <!--  Password Label -->
                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    style="@style/editTextStyle1"
                    android:gravity="center"
                    />

                <LinearLayout
                    android:id="@+id/ripple1"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/forget_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="10dp"
                        android:text="@string/forgot_pass"
                        android:textColor="@color/white"
                        android:textSize="12dip" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_login"
                    style="@style/buttonStyle1"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/login"
                    />

                <LinearLayout
                    android:id="@+id/ripple3"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/link_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/no_account"
                        android:textColor="@color/white"
                        android:textSize="12dip" />
                </LinearLayout>


                <!--<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:visibility="invisible">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.3dp"
                        android:layout_centerInParent="true"
                        android:background="#ffced7e0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/indigo_500"
                        android:padding="5dp"
                        android:text="@string/or"
                        android:textSize="12dip" />
                </RelativeLayout>-->

                <RadioGroup
                    android:id="@+id/group1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_24dp"
                    android:gravity="center"
                    android:padding="@dimen/margin_5dp"
                    android:background="@drawable/bg_rectangle_rounded_5_fill"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:checked="true"
                        android:text="@string/vietnamese"
                        android:textColor="@color/white"/>

                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/english"
                        android:textColor="@color/white" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />




            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>