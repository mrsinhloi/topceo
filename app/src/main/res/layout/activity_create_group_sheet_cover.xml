<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blackTransparent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:id="@+id/bottomSettingCover"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom">

    <LinearLayout
        android:paddingTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:paddingStart="@dimen/margin_24dp"
            android:id="@+id/linearChangeCover"
            android:padding="@dimen/margin_5dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_add_to_photos_24" />

            <TextView
                android:layout_marginStart="@dimen/margin_10dp"
                android:text="@string/change_cover_photo"
                style="@style/header_bold_row"
                android:textStyle="normal"
                android:layout_width="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:paddingStart="@dimen/margin_24dp"
            android:id="@+id/linearRemoveCover"
            android:padding="@dimen/margin_5dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_close_24_black" />

            <TextView
                android:layout_marginStart="@dimen/margin_10dp"
                android:text="@string/remove_cover"
                style="@style/header_bold_row"
                android:textStyle="normal"
                android:layout_width="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
