<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/action_bar_color"
        android:elevation="@dimen/default_elevation"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/edit_your_profile"
            android:textColor="@color/textTitleColor"
            android:textSize="@dimen/appbar_title" />
    </androidx.appcompat.widget.Toolbar>
    <include layout="@layout/separate_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="5">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="4.5"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/publish_photo_thumbnail_size"
                    android:layout_height="@dimen/publish_photo_thumbnail_size" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:text="@string/change_photo"
                    android:textColor="@color/btnColor"
                    android:textSize="@dimen/title_size" />
                <!-- Name Label -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:text="@string/full_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium" />

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:drawablePadding="3dp"
                    android:gravity="bottom"
                    android:hint="@string/full_name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textSize="@dimen/font_size_medium" />

                <!-- Name Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:text="@string/user_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium" />

                <EditText
                    android:id="@+id/editText2"
                    style="@style/editTextStyle3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:digits="abcdefghijklmnopqrstuvwxyz0123456789_."
                    android:hint="@string/user_name"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textSize="@dimen/font_size_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium" />

                <LinearLayout
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/editText10"
                        style="@style/editTextStyle3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:hint="@string/email"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:text=""
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/cursor_black"
                        android:textSize="@dimen/font_size_medium" />
                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:src="@drawable/ic_info_outline_orange_500_24dp"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:text="@string/phone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:digits="0123456789"
                    android:hint="@string/phone"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:text=""
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textSize="@dimen/font_size_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:text="@string/website"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium" />

                <EditText
                    android:id="@+id/editText9"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:hint="@string/website"
                    android:inputType="textWebEmailAddress"
                    android:text=""
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textSize="@dimen/font_size_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:text="@string/facebook"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium" />

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:hint="@string/facebook"
                    android:inputType="textWebEmailAddress"
                    android:text=""
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textSize="@dimen/font_size_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:text="@string/twitter"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium" />

                <EditText
                    android:id="@+id/editText6"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:hint="@string/twitter"
                    android:inputType="textWebEmailAddress"
                    android:text=""
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textSize="@dimen/font_size_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:text="@string/instagram"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium" />

                <EditText
                    android:id="@+id/editText7"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:hint="@string/instagram"
                    android:inputType="textWebEmailAddress"
                    android:text=""
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textSize="@dimen/font_size_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:text="@string/youtube"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium" />

                <EditText
                    android:id="@+id/editText8"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:hint="@string/youtube"
                    android:inputType="textWebEmailAddress"
                    android:text=""
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textSize="@dimen/font_size_medium" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</LinearLayout>
