<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/blue_grey_900"
    android:id="@+id/linearAds"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/imgAds"
        android:layout_width="@dimen/avatar_size_medium"
        android:layout_height="@dimen/avatar_size_medium"
        android:padding="5dp"
        android:src="@drawable/no_media_small"/>

    <TextView
        android:id="@+id/txtAds"
        android:layout_width="@dimen/margin_10dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:padding="@dimen/margin_10dp"
        android:textSize="12sp"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10dp"
        android:src="@drawable/ic_keyboard_arrow_right_grey_500_24dp"/>

</LinearLayout>