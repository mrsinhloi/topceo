<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="0dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_large"
        android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_large"
        android:src="@drawable/no_media_small"
        android:layout_centerInParent="true" />

    <View
        android:id="@+id/txtBg"
        android:background="@drawable/bg_rectangle_rounded_4_fill"
        android:layout_alignTop="@id/img1"
        android:layout_alignLeft="@id/img1"
        android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_large"
        android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_large" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtBg"
        android:layout_alignLeft="@+id/txtBg"
        android:layout_margin="@dimen/margin_10dp"
        android:textColor="@color/white"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_14sp" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtBg"
        android:src="@drawable/ic_check_circle_white_24dp"
        android:layout_margin="@dimen/margin_10dp" />
</RelativeLayout>