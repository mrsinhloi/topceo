<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/img1"
        android:layout_width="@dimen/avatar_size_list_item"
        android:layout_height="@dimen/avatar_size_list_item"
        android:src="@drawable/ic_no_avatar" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="Example application"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="21-07-2016 13:02"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/subtitle_size"
            android:textColor="@color/md_grey_800"
            android:layout_marginTop="2dp" />
    </LinearLayout>


    <Button
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="@string/accept"
        android:id="@+id/btn1"
        android:textAllCaps="false"
        android:textSize="@dimen/btn_follow_text_size"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/margin_5dp"
        app:strokeColor="@color/colorPrimary" />

    <Button
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="@string/delete"
        android:id="@+id/btn2"
        android:textAllCaps="false"
        android:textSize="@dimen/btn_follow_text_size"
        android:textColor="@color/black"
        app:strokeColor="@color/grey_500"
        android:layout_marginStart="@dimen/margin_5dp" />


</LinearLayout>
