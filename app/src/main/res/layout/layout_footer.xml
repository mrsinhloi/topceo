<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearFooterRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/imgLike"
                android:layout_width="@dimen/post_icon_size"
                android:layout_height="@dimen/post_icon_size"
                android:background="@drawable/ic_like_anim"
                android:button="@null"
                android:checked="false"
                android:stateListAnimator="@anim/scale" />

            <TextView
                style="@style/bottom_text_style"
                android:text="@string/like" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/linearComment"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/post_icon_size"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/post_icon_size"
                android:layout_height="@dimen/post_icon_size"
                android:scaleType="fitStart"
                android:src="@drawable/ic_svg_18" />

            <TextView
                style="@style/bottom_text_style"
                android:text="@string/comment" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/linearShare"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/post_icon_size"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/post_icon_size"
                android:layout_height="@dimen/post_icon_size"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                android:src="@drawable/ic_svg_21" />

            <TextView
                style="@style/bottom_text_style"
                android:text="@string/share" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imgSave"
                android:layout_width="@dimen/post_icon_size"
                android:layout_height="@dimen/post_icon_size"
                android:src="@drawable/ic_svg_22" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:background="@color/grey_200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="1 Likes"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />


        <!--<LinearLayout
            android:id="@+id/linearLayout3"
