<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/avatar_size_medium_smaller"
        android:layout_height="@dimen/avatar_size_medium_smaller"
        android:contentDescription="TODO"
        android:src="@drawable/ic_no_avatar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="Phương Phạm chia sẻ hình ảnh của bạn"
        android:textSize="@dimen/title_size"
        android:textColor="@color/grey_500"
        />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/avatar_size_medium"
        android:layout_height="@dimen/avatar_size_medium"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        android:src="@drawable/no_media_small" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/avatar_size_medium"
        android:layout_height="@dimen/avatar_size_medium_smaller"
        android:background="@drawable/bg_rectangle_1_fill"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_add_blue_500_48dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/avatar_size_medium"
        android:layout_height="@dimen/avatar_size_medium_smaller"
        android:background="@drawable/bg_rectangle_2_fill"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_white_48dp" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_white_48dp" />

    </LinearLayout>


</LinearLayout>
