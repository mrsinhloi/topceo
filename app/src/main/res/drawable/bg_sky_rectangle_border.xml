<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/sky_button_toggle_radius" />
            <gradient
                android:startColor="@color/sky_start"
                android:endColor="@color/sky_end"
                android:angle="135"
                android:type="linear"/>
            <stroke
                android:width="@dimen/sky_button_toggle_stroke_width"
                android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/sky_button_toggle_stroke_width"
        android:left="@dimen/sky_button_toggle_stroke_width"
        android:right="@dimen/sky_button_toggle_stroke_width"
        android:top="@dimen/sky_button_toggle_stroke_width">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/sky_button_toggle_radius" />
            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>